<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tatastrive.friends.Frnd_info">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:paddingRight="30dp"
        android:textColor="#990023"
        android:id="@+id/tvName1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#000000"
        android:id="@+id/infoName"
        android:layout_above="@+id/textViewname"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nick Name :"
        android:paddingRight="30dp"
        android:textColor="#990023"
        android:id="@+id/textViewname"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/tvName1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#000000"
        android:id="@+id/info_nickname"
        android:layout_alignTop="@+id/textViewname"
        android:layout_alignStart="@+id/infoName" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#000000"
        android:id="@+id/info_type"
        android:layout_below="@+id/textViewname"
        android:layout_alignStart="@+id/info_nickname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age :"
        android:paddingRight="30dp"
        android:textColor="#990023"
        android:id="@+id/textViewage"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/info_type"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#000000"
        android:id="@+id/info_age"
        android:layout_alignTop="@+id/textViewage"
        android:layout_alignStart="@+id/info_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About :"
        android:textColor="#990023"
        android:id="@+id/textViewabout"
        android:layout_below="@+id/textViewage"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#000000"
        android:id="@+id/info_descptn"
        android:layout_alignTop="@+id/textViewabout"
        android:layout_alignStart="@+id/info_age" />

</RelativeLayout>
